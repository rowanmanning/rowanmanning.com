
{{- /* Set the current context, either the current page or the site */ -}}
{{- $context := . -}}
{{- if .IsHome -}}
	{{- $context = .Site -}}
{{- end -}}

{{- /* Get all of the pages */ -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
	{{- $pages = $context.RegularPages -}}
{{- else -}}
	{{- $pages = $context.Pages -}}
{{- end -}}

{{- /* Filter out private pages */ -}}
{{- $pages = where $pages "Params.private" "!=" true -}}

{{- /* Get the RSS configuration and limit pages */ -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
	{{- $pages = $pages | first $limit -}}
{{- end -}}

{{- /* Grab required data */ -}}
{{- $title := partial "content/data/title" . -}}
{{- if and .Site.Title (not .IsHome) }}
	{{- $title = printf "%s | %s" $title .Site.Title -}}
{{ end -}}

{{- /* Output RSS XML */ -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
